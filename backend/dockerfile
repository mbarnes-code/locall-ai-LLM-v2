# ðŸ“Œ Use lightweight Python image
FROM python:3.10-slim

# Set environment variables to prevent .pyc files & enable buffered output
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Set working directory
WORKDIR /app

# Install system dependencies required for PostgreSQL and other services
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# âœ… Create a non-root user for security
RUN groupadd -r app && useradd -r -g app app

# âœ… Copy and install dependencies separately (optimizes caching)
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# âœ… Copy application code AFTER dependencies (optimizes Docker build caching)
COPY . .

# âœ… Change file ownership to non-root user
RUN chown -R app:app /app

# âœ… Switch to non-root user
USER app

# âœ… Expose Django's port
EXPOSE 8000

# âœ… Set Gunicorn as the default command (with optimizations)
CMD ["gunicorn", "myproject.wsgi:application", "--bind", "0.0.0.0:8000", "--workers=3", "--threads=2", "--timeout=120"]
